page {
  color: #333;
}
.devices_summary {
  margin-top: 30px;
  margin-bottom: 10px;
  padding: 10px;
  font-size: 16px;
}
.device_list {
  /* height: 300px; */
  margin: 50px 5px 0;
  margin-top: 0;
  border: 1px solid #EEE;
  border-radius: 5px;
  width: auto;
}
.device_item {
  /* border-bottom: 1px solid #EEE; */
  padding: 10px;
  color: #666;
}
.device_item_hover {
  background-color: rgba(0, 0, 0, .1);
}
.connected_info {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #F0F0F0;
  padding: 10px;
  padding-bottom: 20px;
  margin-bottom: env(safe-area-inset-bottom);
  font-size: 14px;
  min-height: 100px;
  box-shadow: 0px 0px 3px 0px;
}
.connected_info .operation {
  position: absolute;
  display: inline-block;
  right: 30px;
}
.pos {
  position: fixed;
  width: 100%;
  height: 100vh;
  background: rgba(0,0,0,.6);
  left: 0px;
  top: 0px;
  z-index: 1;
}
.pos-box {
  width: 100%;
  height: 284px;
  color: #373737;
  position: absolute;
  top: 21%;
  text-align: center;
  font-size: 14px;
  line-height: 28px;
  z-index: 3;
}
.pos-title {
  color: #1B6FE1;
  font-size: 18px;
}
.pos-i{
  width: 100%;
  height: 284px;
  color: #373737;
  position: absolute;
  top: 21%;
  z-index: 2;
}
.pos-i image{
  width: 100%;
  height: 284px;
}

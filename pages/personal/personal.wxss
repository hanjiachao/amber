.content-box{
    position: relative;
}
.fl{
    float: left;
}
.fr{
    float: right;
}
.per-list{
    border-radius: 13px 13px 0px 0px;
    padding: 18px;
}
.per-item {
    line-height: 45px;
    color: #242424;
    clear: both;
    border-bottom: 1px solid #e2e2e2;
    padding: 5px 0px;
    font-size: 14px;
}
.per-icon {
    width: 15px;
    padding: 14px 10px 0px 0px;
}
.per-ri {
    width: 10px;
    margin-top: 12px;
}
.btn{
    width: 100%;
    height: 42px;
    text-align: center;
    line-height: 42px;
    color: #fff;
    margin-top: 12px;
    font-size: 16px;
}
.btn-green{
    background: #1B6FE1;
    box-shadow: 0px 5px 30px 1px rgba(0, 105, 247, 0.4);
    border-radius: 28px;
}
.pos-btn{
    position: fixed;
    width: 80%;
    margin-left: -40%;
    left: 50%;
    bottom: 50px;
}
.pos-t{
    text-align: center;
    font-size: 14px;
}
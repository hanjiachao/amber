
.content-box{
    position: relative;
}
.fl{
    float: left;
}
.fr{
    float: right;
}
.store-list{
    background: #fff;
    padding: 20px 15px;
    overflow: hidden;
}
.store-list>image{
    width: 120px;
    height: 100px;
    border-radius: 5px;
}
.store-r{
    margin-left: 132px;
    color: #808080;
    font-size: 14px;
    line-height: 22px;
    overflow: hidden;
}
.store-title{
    font-size: 20px;
    color: #242424;
    margin-bottom: 10px;
    margin-top: 10px;
}
.btn{
    width: 100%;
    height: 42px;
    text-align: center;
    line-height: 42px;
    color: #fff;
    margin-top: 40px;
    font-size: 16px;
}
.btn-green{
    background: #1B6FE1;
    box-shadow: 0px 5px 30px 1px rgba(0, 105, 247, 0.4);
    border-radius: 28px;
}
.pos-btn{
    width: 80%;
    margin: 50px auto;
}
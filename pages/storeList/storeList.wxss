.content-box{
    position: relative;
}
.fl{
    float: left;
}
.fr{
    float: right;
}
.store-list{
    background: #fff;
    padding: 20px 15px;
    overflow: hidden;
    opacity: 0.8;
    margin-bottom: 8px;
}
.store-list>image{
    width: 120px;
    height: 100px;
    border-radius: 5px;
}
.store-r{
    margin-left: 132px;
    color: #808080;
    font-size: 14px;
    line-height: 22px;
    overflow: hidden;
}
.store-title{
    font-size: 20px;
    color: #242424;
    margin-bottom: 10px;
    margin-top: 10px;
}
.store-price{
    color: #F10919;
    text-align: right;
    width: 100%;
    height: 20px;
    margin-top: 10px;
    font-size: 16px;
}
.store-price .fr{
    padding: 0px 7px;
    text-align: center;
    position: relative;
}
.store-price .fr:last-child:after{
    content: '';
    position: absolute;
    width: 1px;
    height: 15px;
    background: #cacaca;
    right: 0px;
    top: 3px;
}
.notext{
    padding: 40px 0px;
    text-align: center;
    color: #cacaca;
}
.store-brief{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.store-li{
    background: #fff;
    padding: 20px 15px;
    overflow: hidden;
    opacity: 0.8;
    margin-bottom: 8px;
}
.btn{
    background: #1B6FE1;
    box-shadow: 0px 5px 30px 1px rgba(0, 105, 247, 0.4);
    border-radius: 21px;
    color: #FFFFFF;
    width: 78px;
    height: 33px;
    line-height: 33px;
    text-align: center;
    font-size: 14px;
    margin-top: 15px;
}
.btn-fine{
    background: #7A869A;
    box-shadow: 0px 5px 30px 1px rgba(122, 134, 154, 0.4);
}
.store-ri{
    color: #808080;
    font-size: 14px;
    line-height: 22px;
    overflow: hidden;
    margin-right: 100px;
}
.btn-send{
    background: #ababab;
    box-shadow: 0px 5px 30px 1px rgba(128, 128, 128, 0.4);
    border-radius: 21px;
}
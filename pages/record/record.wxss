.fl{
    float: left;
}
.fr{
    float: right;
}
.record{
    height: 183px;
    text-align: center;
    color: #fff;
    overflow: hidden;
}
.record-num{
    width: 104px;
    margin: 40px auto 20px;
    overflow: hidden;
}
.record-num>.fl{
    background: rgba(255, 255, 255, 0.3);
    border: 1px solid #FFFFFF;
    box-shadow: 0px 2px 30px 0px rgba(4, 0, 0, 0.1);
    border-radius: 10px;
    width: 45px;
    height: 61px;
    text-align: center;
    line-height: 61px;
    font-size: 24px;
    font-weight: bold;
    margin-right: 10px;
}
.record-num>.fl:last-child{
    margin-right: 0px;
}
.record-f{
    width: 100%;
    height: 50px;
    line-height: 50px;
    color: #242424;
    font-size: 16px;
}
.record-f .fl{
    width: 50%;
    float: left;
    text-align: center;
}
.record-f .active{
    background: linear-gradient(-88deg, #1A6FE1 0%, #12A1D1 100%);
    color: #fff;
}
.box-shaw{
    border-top: 5px solid #EAECF3;
    background: #fff;
    padding: 15px;
    color: #242424;
}
.red{
    color: #F10919;
}
.time{
    font-size: 14px;
    color: #A1A2A2;
    margin-top: 5px;
}
.record-box{
    overflow: hidden;
    border-bottom: 1px solid #e2e2e2;
    padding: 15px 0px;
}
.record-img{
    width: 100%;
    position: absolute;
    z-index: -1;
    overflow: hidden;
    left: 0px;
    top: 0px;
}
.record-img image{
    width: 100%;
    height: 183px;
}
.notext{
    padding: 40px 0px;
    text-align: center;
    color: #cacaca;
}